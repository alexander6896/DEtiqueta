<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>D´Etiqueta</title>
    <link rel="stylesheet" href="~/Content/Inicio.css" type="text/css" />
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <nav class="navbar fixed-top navbar-expand-lg navbar-dark InicioNavBar">
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mx-auto">
                <li class="nav-item active ml-4 mr-4">@Html.ActionLink("Inicio", "Index", "Home", new { @class = "nav-link" })</li>
                <li class="nav-item active ml-4 mr-4">@Html.ActionLink("Franquicias", "", "", new { @class = "nav-link" })</li>
                <li class="nav-item active ml-4 mr-4">@Html.ActionLink("Acerca de", "About", "Home", new { @class = "nav-link" })</li>
                <li class="nav-item active ml-4 mr-4">@Html.ActionLink("Contacto", "Contact", "Home", new { @class = "nav-link" })</li>
            </ul>

            <!--Búsqueda-->
            @*<form class="form-inline my-2 my-lg-0">
                    <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search">
                    <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
                </form>*@
        </div>
    </nav>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - D´Etiqueta</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
